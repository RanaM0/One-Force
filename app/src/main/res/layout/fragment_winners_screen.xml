<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightBlue"
    tools:context=".Dashboard.Admin.WinnersScreen">

    <LinearLayout
        android:id="@+id/llallwinnersheader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/darkBlue"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtAllwinners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="Here's all Lucky users that won prizes by investing in our app"
            android:textColor="@color/lightBlue"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/bg_et_search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSearchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:background="@null"
                android:hint="Search via ID"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/lightBlue"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:padding="@dimen/_5sdp"
                android:id="@+id/ivSearchIcon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:elevation="@dimen/_7sdp"
                android:src="@drawable/ic_search" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/arc_2"
        app:layout_constraintTop_toBottomOf="@id/llallwinnersheader" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:id="@+id/rvAllwinners"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llallwinnersheader"
        tools:listitem="@layout/all_winners_list_item" />




</androidx.constraintlayout.widget.ConstraintLayout>